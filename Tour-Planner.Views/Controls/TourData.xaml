<UserControl x:Class="Tour_Planner.Views.Controls.TourData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner.Views.Controls"
             xmlns:viewmodels="clr-namespace:Tour_Planner.ViewModels;assembly=Tour-Planner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ListToursViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock>Title: </TextBlock>
        <Grid>
            <TabControl>
                <TabItem Header="Route">Random Route</TabItem>
                <TabItem Header="Description">
                    <TextBlock Text="{Binding Description, Mode=TwoWay}"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
